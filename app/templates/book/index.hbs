<div align="center">
    {{#each this.model as |b|}}
        <div class="box-view">
            <img class="imgBook" src={{b.attributes.image}}>
            <h3>{{b.attributes.name}}</h3>
            <p>Author : {{b.attributes.author}}</p>
            
            {{!-- {{#if (get b.attributes "is-published")}} --}}
              <p>Publisher : {{b.attributes.publisher}}</p>
              {{!-- <p>Published Date : {{get b.attributes "published-at"}}</p> --}}
            {{!-- {{else}}
              <p>Not published</p>
            {{/if}} --}}
            <LinkTo @route="book.edit" @model={{b}}>Update</LinkTo>
            <button type="button" {{on "click" (fn this.removeBook b.id)}}>Remove</button>
        </div>
    {{else}}
      <p>No Books Found!</p>
    {{/each}}
</div>